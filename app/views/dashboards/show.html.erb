<div class="row">
<div class="text-center">

<h2> <span class="glyphicon glyphicon-tower"></span> Dashboard Area</h2>
<h3>Welcome <%= current_user.username %></h3>
</div>
  <div class="col col-sm-4">
  
    <div class="well">
      <h3 class="text-success"> <span class="glyphicon glyphicon-th-large"></span> Users</h3>
      <ul class="list-group">
        <%= render @users %>
      </ul>
    </div>
  
      
  </div>
    <div class="col col-sm-8">
      <%  if current_user && current_user.admin? %>
      
        <div class="panel panel-success">
          <div class="panel-heading">
            <h3 class="panel-title"> <span class="glyphicon glyphicon-plus-sign"></span> Add Union Councils </h3>
          </div>
          <div class="panel-body">
            
              <%= form_tag import_ucs_path, multipart: true do %>
                <%= file_field_tag :file %>
                  
                  <%= submit_tag 'Import', name: 'ucs', class: 'btn btn-sm btn-success' %>
               
            <% end %> <!-- panel-body -->
          </div><!--   panel-heading-->
        </div> <!-- panel panel-primary -->
         <div class="panel panel-info">
          <div class="panel-heading">
            <h3 class="panel-title"> <span class="glyphicon glyphicon-plus-sign"></span> Add Villages </h3>
          </div>
          <div class="panel-body">
            
              <%= form_tag import_ucs_path, multipart: true do %>
                <%= file_field_tag :file %>
                  <%= submit_tag 'Import', name: 'villages', class: 'btn btn-sm btn-success' %>
               
            <% end %> <!-- panel-body -->
          </div><!--   panel-heading-->
        </div> <!-- panel panel-primary -->

        <div class="panel panel-warning">
          <div class="panel-heading">
            <h3 class="panel-title"> <span class="glyphicon glyphicon-plus-sign"></span> Add Users </h3>
          </div>
          <div class="panel-body">
            
              <%= form_tag import_ucs_path, multipart: true do %>
                <%= file_field_tag :file %>
                  <%= submit_tag 'Import', name: 'users', class: 'btn btn-sm btn-success' %>
               
            <% end %> <!-- panel-body -->
          </div><!--   panel-heading-->
        </div> <!-- panel panel-primary -->
   
      <% end %>
    </div> <!-- end col-sm-8 -->
  </div> <!-- end of row -->